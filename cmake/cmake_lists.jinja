add_dependencies(${MODULE}
	)
set_target_properties(${MODULE} PROPERTIES
	COMPILE_FLAGS ${CMAKE_CXX_FLAGS} ${CMAKE_C_FLAGS} ${MAXOPTIMIZATION}
	LINK_FLAGS
	)
